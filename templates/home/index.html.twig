{% extends 'base.html.twig' %}

{% block title %}FinanceTracker - Dashboard{% endblock %}

{% block body %}
    <!-- Statistiques principales -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon users">
                <i class="fas fa-wallet"></i>
            </div>
            <div class="stat-label">Solde total</div>
            <div class="stat-value">
                {{ transactions|reduce((sum, t) => sum + t.amount, 0)|number_format(2, ',', ' ') }} €
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon transactions">
                <i class="fas fa-arrow-up"></i>
            </div>
            <div class="stat-label">Total Revenus</div>
            <div class="stat-value">
                {{ transactions|filter(t => t.amount >= 0)|reduce((sum, t) => sum + t.amount, 0)|number_format(2, ',', ' ') }} €
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon transactions">
                <i class="fas fa-arrow-down"></i>
            </div>
            <div class="stat-label">Total Dépenses</div>
            <div class="stat-value">
                {{ transactions|filter(t => t.amount < 0)|reduce((sum, t) => sum + t.amount, 0)|number_format(2, ',', ' ') }} €
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon users">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-label">Utilisateurs actifs</div>
            <div class="stat-value">
                {{ users|length }}
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="actions-grid">
        <div class="action-card">
            <h3 class="action-title">Nouvel Utilisateur</h3>
            <p class="action-description">Créez un nouveau compte utilisateur dans le système.</p>
            <a href="{{ path('app_user_new') }}" class="action-button users">
                <i class="fas fa-user-plus"></i>
                Créer un utilisateur
            </a>
        </div>

        <div class="action-card">
            <h3 class="action-title">Nouvelle Transaction</h3>
            <p class="action-description">Enregistrez une nouvelle transaction financière.</p>
            <a href="{{ path('app_transaction_new') }}" class="action-button transactions">
                <i class="fas fa-plus"></i>
                Créer une transaction
            </a>
        </div>

        <div class="action-card">
            <h3 class="action-title">Gérer les Utilisateurs</h3>
            <p class="action-description">Consultez et modifiez les comptes utilisateurs existants.</p>
            <a href="{{ path('app_user_index') }}" class="action-button users">
                <i class="fas fa-users"></i>
                Gérer les utilisateurs
            </a>
        </div>

        <div class="action-card">
            <h3 class="action-title">Voir les Transactions</h3>
            <p class="action-description">Consultez l'historique complet des transactions.</p>
            <a href="{{ path('app_transaction_index') }}" class="action-button transactions">
                <i class="fas fa-chart-line"></i>
                Voir les transactions
            </a>
        </div>
    </div>

    <!-- Dernières transactions -->
    {% if transactions|length > 0 %}
        <div class="content-card">
            <div class="content-header">
                <h3 class="content-title">
                    <i class="fas fa-clock"></i>
                    Dernières Transactions
                </h3>
                <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
                    Voir toutes
                </a>
            </div>
            <div class="content-body">
                <div class="overflow-x-auto">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Montant</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Utilisateur</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for transaction in transactions|slice(0, 5) %}
                            <tr>
                                <td>
                                    <strong style="color: #0f172a;">{{ transaction.title }}</strong>
                                </td>
                                <td>
                                    <span style="font-weight: 600; color: {% if transaction.amount >= 0 %}#10b981{% else %}#ef4444{% endif %};">
                                        {{ transaction.amount|number_format(2, ',', ' ') }} €
                                    </span>
                                </td>
                                <td>
                                    <span class="role-badge {% if transaction.type == 'Revenu' %}role-user{% else %}role-admin{% endif %}">
                                        {{ transaction.type }}
                                    </span>
                                </td>
                                <td>
                                    <div style="color: #64748b; font-size: 0.875rem;">
                                        {{ transaction.date ? transaction.date|date('d/m/Y') : '' }}
                                    </div>
                                </td>
                                <td>
                                    {% if transaction.user %}
                                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                                            <div class="user-avatar" style="width: 24px; height: 24px; font-size: 0.75rem;">
                                                {{ transaction.user.firstName|first }}{{ transaction.user.lastName|first }}
                                            </div>
                                            <span style="color: #0f172a;">{{ transaction.user.firstName }} {{ transaction.user.lastName }}</span>
                                        </div>
                                    {% else %}
                                        <span style="color: #94a3b8;">-</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %} 