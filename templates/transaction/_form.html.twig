{{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
    <div class="form-grid">
        <div class="form-group">
            {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-input', 'placeholder': 'Entrez le titre de la transaction'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-input', 'placeholder': 'Description optionnelle de la transaction', 'rows': '3'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            {{ form_label(form.amount, 'Montant', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.amount, {'attr': {'class': 'form-input', 'placeholder': '0.00', 'type': 'number', 'step': '0.01'}}) }}
            {{ form_errors(form.amount) }}
        </div>

        <div class="form-group">
            {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-input', 'placeholder': 'Revenu ou Dépense'}}) }}
            {{ form_errors(form.type) }}
        </div>

        <div class="form-group">
            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-input', 'placeholder': 'ex: Alimentation, Transport, Salaire'}}) }}
            {{ form_errors(form.category) }}
        </div>

        <div class="form-group">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-input', 'type': 'date'}}) }}
            {{ form_errors(form.date) }}
        </div>

        {% if form.user is defined %}
        <div class="form-group">
            {{ form_label(form.user, 'Utilisateur', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(form.user) }}
        </div>
        {% endif %}
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
