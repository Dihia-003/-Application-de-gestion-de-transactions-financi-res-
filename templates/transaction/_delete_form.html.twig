<form method="post" action="{{ path('app_transaction_delete', {'id': transaction.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette transaction ?');" class="delete-form">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i>
        Supprimer
    </button>
</form>
