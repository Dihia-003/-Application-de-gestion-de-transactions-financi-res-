{% extends 'base.html.twig' %}

{% block title %}Modifier la transaction{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-edit"></i>
            Modifier la transaction
        </h1>
        <p class="page-subtitle">Modifiez les informations de la transaction</p>
    </div>

    <div class="content-card">
        <div class="content-header">
            <h3 class="content-title">Modifier {{ transaction.title }}</h3>
        </div>
        <div class="content-body">
            {{ include('transaction/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="form-actions" style="margin-top: 1.5rem; display: flex; gap: 1rem;">
        <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Retour à la liste
        </a>
        
        <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}" class="btn btn-primary">
            <i class="fas fa-eye"></i>
            Voir la transaction
        </a>
    </div>
</div>
{% endblock %}
