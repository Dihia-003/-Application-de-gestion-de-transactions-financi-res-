{% extends 'base.html.twig' %}

{% block title %}Utilisateur - {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-user"></i>
            Détails de l'utilisateur
        </h1>
        <p class="page-subtitle">Informations complètes du compte utilisateur</p>
    </div>

    <div class="content-card">
        <div class="content-header">
            <h3 class="content-title">Profil de {{ user.firstName }} {{ user.lastName }}</h3>
        </div>
        <div class="content-body">
            <div class="user-profile">
                <div class="profile-avatar">
                    <div class="user-avatar" style="width: 80px; height: 80px; font-size: 2rem;">
                        {{ user.firstName|first }}{{ user.lastName|first }}
                    </div>
                </div>
                
                <div class="profile-info">
                    <div class="info-row">
                        <span class="info-label">ID :</span>
                        <span class="info-value">#{{ user.id }}</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Prénom :</span>
                        <span class="info-value">{{ user.firstName }}</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Nom :</span>
                        <span class="info-value">{{ user.lastName }}</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Email :</span>
                        <span class="info-value">{{ user.email }}</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Rôles :</span>
                        <div class="info-value">
                            {% for role in user.roles %}
                                <span class="role-badge {% if role == 'ROLE_ADMIN' %}role-admin{% else %}role-user{% endif %}">
                                    {{ role }}
                                </span>
                            {% endfor %}
                        </div>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label">Transactions :</span>
                        <span class="info-value">{{ user.transactions|length }} transaction(s)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions" style="margin-top: 1.5rem; display: flex; gap: 1rem;">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i>
            Modifier
        </a>
        
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Retour à la liste
        </a>
        
        {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
