{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="card fade-in">
        <div class="card-header">
            <h1 class="card-title">
                <i class="fas fa-users"></i>
                Gestion des Utilisateurs
            </h1>
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Nouvel Utilisateur
            </a>
        </div>

        {% if users|length > 0 %}
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôles</th>
                            <th>Transactions</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <span class="badge badge-info">#{{ user.id }}</span>
                            </td>
                            <td>
                                <strong>{{ user.firstName }} {{ user.lastName }}</strong>
                            </td>
                            <td>
                                <i class="fas fa-envelope"></i>
                                {{ user.email }}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge badge-success">{{ role }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <span class="badge badge-info">{{ user.transactions|length }} transaction(s)</span>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-eye"></i>
                                        Voir
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                        Modifier
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center">
                <i class="fas fa-users" style="font-size: 4rem; color: var(--text-muted); margin-bottom: 1rem;"></i>
                <h3>Aucun utilisateur trouvé</h3>
                <p class="text-muted">Commencez par créer votre premier utilisateur.</p>
                <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Créer le premier utilisateur
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
